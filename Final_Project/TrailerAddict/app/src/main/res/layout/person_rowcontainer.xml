<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_popularpeople_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_people_row_popular"
        android:layout_marginStart="@dimen/margin_all_text_16dp"
        android:layout_marginTop="@dimen/margin_all_top_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_recyclerview_header_seeall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seeall_button_row"
        android:layout_marginEnd="@dimen/margin_all_text_16dp"
        android:layout_marginTop="@dimen/margin_all_top_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_all_start_16dp"
        android:layout_marginTop="@dimen/margin_all_top_8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_popularpeople_header_title" />

</androidx.constraintlayout.widget.ConstraintLayout>